.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.header{
    position: fixed;
    background-color: #fff;
    height: 100rpx;
    width: 100%;
    border-top:1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 3px 0 #e3e3e3;
    z-index: 99;
}

.box{
    width: 700rpx;
    height: 68rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 50px;
    background-color: #f5f5f5;
    font-size: 28rpx;
    color: #999;
}

.box image{
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
    margin-bottom: -2px;
}

.sub-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
    margin-top: 100rpx;
}

.head-img{
    width: 106rpx;
    height: 34rpx;
    margin-top: 40rpx;
}

.books-container{
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
    flex-wrap: wrap;
    padding: 0 90rpx;
    justify-content: space-between;
}

.books-container w-book{
    margin-bottom: 25rpx;
}
