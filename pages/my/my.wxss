.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header{
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.bgimg{
    width: 750rpx;
    height: 574rpx;
}

.learnimg{
    width: 88rpx;
    height: 88rpx;
    position: absolute;
    right: 45rpx;
    top: 40rpx;
}

.avatar-position{
    position: absolute;
    top: 255rpx;
}

.avatar-container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatar{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
}


.description-con{
    padding: 0 100rpx;
    width:550rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    top: 440rpx;
}

.description-con>view:nth-child(2) {
    margin-top: -5rpx;
}

.about-con{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.likenum{
    font-size: 36rpx;
    color: #000000;
}


.text{
    font-size: 24rpx;
    color: #999999;
}

.aboutimg{
    width: 34rpx;
    height: 34rpx;
    margin-bottom: 14rpx; 
}

.sub-container{
    width: 100%;
    margin-top: -13rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
}

.head-img{
    width: 98rpx;
    height: 42rpx;
    margin-top: 30rpx;
}

.like-container{
    margin-top: 30rpx;
    width: 690rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 0 30rpx;

}

.preview{
    margin-bottom: 30rpx;
}