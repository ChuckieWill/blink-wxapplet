.ex-tag1{
    background-color: #fffddd !important;

}

.ex-tag2{
    background-color: #eefbff !important;
}

.content{
    font-weight: 500;
    text-indent: 58rpx;
}

.detail-container{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin-bottom: 100rpx;
    font-size: 28rpx;
    color: #666;
}

.vertical{
    display: flex;
    flex-direction: column;
}

.description{
    color: #999;
    margin-right: 30rpx;
}

.post-cpontainer{
    width: 690rpx;
    height: 100rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    background-color: #fff;
    padding: 0 30rpx;

}

.post-fake{
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 60rpx;
    width: 460rpx;
    border: 1px solid #999;
    border-radius: 15px;
    font-size: 22rpx;
    padding-left: 20rpx;
}

.like-container{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.like{
    margin-right: 10rpx;
    margin-top: 10rpx;
}

.posting-container{
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    width: 100%;
    z-index: 999;
}

.post-header{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #f5f5f5;
    border-top: 1px solid #f5f5f5;
}

.concle{
    color: #666;
}

.post-header text{
    padding: 25rpx;
}

.post-header>text:first-child{
    font-size: 28rpx;
    color: #bbb;
}

.posting-comment{
    width: 690rpx;
    padding: 40rpx 30rpx 0 30rpx;
}

.post{
    width: 690rpx;
    height: 56rpx;
    margin: 30rpx auto;
    background-color: #f5f5f5;
    border-radius: 15px;
    padding-left: 25rpx;
}

.shadow {
    color: #999;
}

.share-btn{
    /* margin-left: 10rpx; */
    margin-top:28rpx;
  }
  
.share{
    width: 40rpx;
    height: 40rpx;
}