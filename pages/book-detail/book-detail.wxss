.container{
    width: 100%;
    background-color: #f5f5f5;
}

.head{
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
}

.head image{
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.title{
    font-size: 38rpx;
    font-weight: 600;
    margin-top: 20rpx;
    color: #2f2f2f;
}

.author{
    font-size: 28rpx;
    color: #999;
}

.sub-container{
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    margin-top: 30rpx;
    padding: 30rpx;

}

.headline{
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}

.comment-container{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.comment-container w-tag{
    margin-bottom: 10rpx;
    margin-right: 15rpx;
}

.num{
    margin-left: 10rpx;
    font-size: 22rpx;
    color: #aaa;
}

